<% content_for :title, '404 Not Found' %>

<section class="grid h-screen place-items-center">
  <div class="text-center">
    <div class="flex flex-col items-center justify-center gap-3 opacity-35 dark:opacity-25">
      <%= inline_svg_tag 'icons/document.svg', class: 'size-14' %>
      <h1 class="mb-4 text-8xl sm:text-9xl font-black">404</h1>
    </div>

    <p class="mb-4 text-2xl font-bold tracking-tight sm:text-4xl">Page Not Found</p>
    <p class="mb-1 text-soft text-pretty">Sorry, we couldn&#8217;t find the page you&#8217;re looking for.</p>
    <p class="mb-6 text-soft text-pretty">Try one of the links below instead.</p>

    <div class="flex items-center justify-center gap-x-6">
      <%= link_to :back, class: 'btn btn-white btn-muted gap-2 font-bold' do %>
        <%= inline_svg_tag 'icons/arrow-long-left.svg', class: 'size-5' %>
        <span>Go back</span>
      <% end %>
      <%= link_to 'Return home', root_path, class: 'btn btn-primary font-bold' %>
    </div>
  </div>
</section>
