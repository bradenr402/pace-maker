<% if resource.errors.any? %>
  <div class="flex p-4 my-6 text-sm text-red-800 border border-red-300/80 rounded-lg bg-red-50 dark:bg-slate-800 dark:text-red-400 dark:border-red-800/80">
    <%= inline_svg_tag 'icons/x-circle.svg', class: 'size-5 shrink-0 mr-2' %>
    <span class="sr-only">Error</span>

    <div>
      <span class="font-medium">
        <%= I18n.t("errors.messages.not_saved",
                  count: resource.errors.count,
                  resource: resource.class.model_name.human.downcase)
        %>
      </span>
      <ul class="mt-1.5 list-disc ml-4">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
