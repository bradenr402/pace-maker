<% nav_links = {
  'Home': root_url,
  'Runs': runs_path,
  'Profile': user_path(current_user)
} %>

<div class="container max-w-3xl mx-auto px-4 flex flex-wrap items-center justify-between">
  <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-slate-500 rounded-lg md:hidden hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-slate-200 dark:text-slate-400 dark:hover:bg-slate-700 dark:focus:ring-slate-600" aria-controls="navbar-default" aria-expanded="false">
    <span class="sr-only">Open main menu</span>
    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"></path>
    </svg>
  </button>
  <div class="hidden w-full md:block md:w-auto">
    <nav class="font-medium flex flex-col gap-3 p-4 md:p-0 mt-4 rounded-lg md:flex-row bg-white dark:bg-slate-900">
      <% nav_links.each do |name, path| %>
        <% if current_page?(path) %>
          <%= link_to name, path, class: 'nav-link nav-link-active' %>
        <% else %>
          <%= link_to name, path, class: 'nav-link' %>
        <% end %>
      <% end %>
    </nav>
  </div>
</div>
