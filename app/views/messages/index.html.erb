<% content_for :title, "#{@team.name} Main Chat" %>

<div data-controller="reply-message" class="max-w-3xl mx-auto mt-16 mb-80 md:mb-16">
  <div class="mb-6 pt-4 border-b border-slate-200 dark:border-slate-700 sticky top-0 bg-slate-50 dark:bg-slate-900">
    <%= link_to @team, class: 'group flex items-center gap-3 pb-2', aria: { label: "Back to #{@team.name}" } do %>
      <%= inline_svg_tag 'icons/chevron-left-bold.svg', class: 'size-6 transition ease-in-out duration-200 group-hover:text-indigo-600 dark:group-hover:text-indigo-500' %>
      <div class="flex items-center justify-start gap-4">
        <%= render 'shared/team_photo', team: @team, size: :xs, icon_background: :darker %>
        <div>
          <span class="text-lg font-bold transition ease-in-out duration-200 group-hover:text-indigo-600 dark:group-hover:text-indigo-500"><%= @team.name %></span>
          <p class="text-soft text-xs">Main Chat</p>
        </div>
      </div>
    <% end %>

    <% pinned_message = @team.messages.find_by(pinned: true) %>
    <% if pinned_message.present? %>
      <%= render 'pinned_message', message: pinned_message %>
    <% else %>
      <div id="pinned_message"></div>
    <% end %>
  </div>

  <div id="messages" class="mb-6">
    <% @messages.each do |message| %>
      <% if message.deleted? %>
        <%= render 'deleted_message', message: message %>
      <% else %>
        <%= render message %>
        <% end %>
    <% end %>
  </div>

  <div>
    <%= render 'form', message: Message.new %>
  </div>
</div>

<script>
  window.onload = () => {
    document.addEventListener('keydown', function(event) {
      const textarea = document.getElementById('message_content');

      if (document.activeElement === textarea && (event.ctrlKey || event.metaKey) && event.key === 'Enter') {
        event.preventDefault(); // Prevents default behavior like adding a new line
        document.getElementById('messageForm').submit();
      }
    });
  };
</script>
