<%= form_with(model: @run) do |form| %>
  <div class="form-group">
    <%= form.label :date, 'What day did you run?', class: 'form-label' %>
    <%= form.date_field :date, required: true, autofocus: true, max: Date.today, value: form.object.new_record? ? Date.today : @run.date, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :distance, 'How many miles did you run?', class: 'form-label' %>
    <%= form.number_field :distance, required: true, step: :any, min: 0, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :duration_input, 'How long did you run?', class: 'form-label' %>
    <%= form.text_field :duration_input, required: true, pattern: '^((2[0-3]|1\d|0?\d):)?([0-5]?\d):([0-5]\d)$', title: 'Enter time in MM:SS or HH:MM:SS format', value: form.object.new_record? ? '' : clock_time_display(@run.duration), class: 'form-input' %>
    <p class="text-xs text-slate-700 my-1 dark:text-slate-400">Enter time in MM:SS or HH:MM:SS format.</p>
  </div>

  <div class="form-group">
    <%= form.label :comments, class: 'form-label' do %>
      <p> Any additional comments?
        <span class="text-xs text-slate-700 dark:text-slate-400">(optional)</span>
      </p>
    <% end %>
    <%= form.text_area :comments, placeholder: 'Add comments...', data: { controller: 'autogrow', action: 'input->autogrow#grow' }, class: 'form-input resize-vertical' %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <div class="flex gap-6 items-center">
      <% unless form.object.new_record? %>
        <%= link_to "Delete", @run,
                      class: "btn btn-destructive btn-outline",
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: 'Are you sure you want to delete this run?'
                      } %>
      <% end %>
      <%= link_to "Cancel", :back, class: "btn btn-white" %>
    </div>
  </div>
<% end %>
