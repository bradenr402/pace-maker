<% content_for :title, "Run â€¢ #{format_date(@run.date)}" %>

<div class="max-w-3xl px-4 mx-auto my-16">
  <div class="pb-6 border-b border-slate-200 dark:border-slate-700">
    <div class="flex flex-wrap items-center gap-4">
      <%= link_to @run.user, class: 'group flex gap-4 items-center mr-auto' do %>
        <% if @run.user.avatar.attached? %>
          <%= image_tag @run.user.avatar.variant(resize_to_limit: [100, 100]).processed, class: 'size-16 rounded-lg drop-shadow-lg dark:drop-shadow-none object-cover' %>
        <% else %>
          <div class="size-16 bg-slate-200 dark:bg-slate-800 rounded-lg drop-shadow-lg dark:drop-shadow-none grid place-items-center">
            <%= inline_svg_tag 'icons/user.svg', class: 'size-12 text-soft' %>
          </div>
        <% end %>

        <h1 class="transition duration-300 ease-in-out heading group-hover:text-indigo-600 dark:group-hover:text-indigo-500">
          <%= @run.user.default_name %>
        </h1>
      <% end %>

      <% if @run.user == current_user %>
        <div
          data-controller="modal"
          data-modal-hide-modal-class="opacity-0 scale-75 pointer-events-none"
          data-modal-show-modal-class="opacity-100 scale-100 pointer-events-auto"
          data-modal-hide-backdrop-class="opacity-0 pointer-events-none"
          data-modal-show-backdrop-class="opacity-100 pointer-events-auto"
          class="relative ml-auto"
        >

          <div
            data-controller="dropdown"
            data-dropdown-hide-dropdown-class="pointer-events-none scale-75 opacity-0"
            data-dropdown-show-dropdown-class="pointer-events-auto scale-100 opacity-100"
            data-dropdown-icon-open-class="rotate-180"
            data-dropdown-dropdown-open-class="shadow-md"
            class="text-sm rounded-md transition duration-200 ease-in-out"
          >
            <!-- Run Actions Dropdown Trigger -->
            <button
              type="button"
              data-action="click->dropdown#toggle"
              class="flex items-center gap-3 py-2 px-4 border border-slate-300 shadow bg-white font-normal rounded-md focus:outline-none focus:border-indigo-500 dark:bg-slate-800 dark:border-slate-700 dark:focus:border-slate-600"
            >
              <span>Actions</span>
              <%= inline_svg_tag 'icons/chevron-down.svg', class: 'size-4 text-soft transition duration-200 ease-in-out', data: { dropdown_target: 'arrowIcon' } %>
            </button>

            <!-- Run Actions Dropdown Menu -->
            <div
              data-dropdown-target="dropdown"
              class="pointer-events-none absolute right-0 top-12 z-50 w-max origin-top-right scale-75 rounded-md bg-white p-2 opacity-0 shadow-md transition duration-200 ease-in-out dark:bg-slate-800 border border-slate-300 dark:border-slate-700 dark:shadow-none flex flex-col gap-1.5"
            >
              <!-- Open Edit Run Modal Button -->
              <button data-action="click->modal#open" data-modal-id="editRunModal" class="flex items-center gap-2.5 py-2 px-4 rounded transition duration-200 ease-in-out hover:bg-slate-200/60 dark:hover:bg-slate-700/40">
                <%= inline_svg_tag 'icons/edit.svg', class: 'size-5' %>
                Edit run
              </button>

              <!-- Open Delete Run Modal Button -->
              <button data-action="click->modal#open" data-modal-id="deleteRunModal" class="flex items-center gap-2.5 py-2 px-4 rounded transition duration-200 ease-in-out hover:bg-rose-200/50 dark:hover:bg-rose-900/25 hover:text-rose-600 dark:hover:text-rose-500">
                <%= inline_svg_tag 'icons/trash.svg', class: 'size-5' %>
                Delete run
              </button>
            </div>
          </div>

          <%= render 'runs/edit_run_modal', run: @run %>

          <!-- Delete Run Modal Backdrop -->
          <div
            data-modal-target="backdrop"
            data-modal-id="deleteRunModal"
            data-action="click->modal#backdropClose"
            class="modal-backdrop opacity-0 pointer-events-none"></div>

          <!-- Delete Run Modal -->
          <div
            id="deleteRunModal"
            role="dialog"
            tabindex="-1"
            data-modal-target="modal"
            class="modal opacity-0 pointer-events-none"
          >
            <div class="flex flex-col space-y-1.5 text-center sm:text-left">
              <h2 class="text-lg font-semibold leading-none tracking-tight">Delete Run?</h2>
              <p class="text-soft text-sm">Are you sure? This cannot be undone.</p>
            </div>

            <div class="flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2 mt-4">
              <button data-action="click->modal#close" data-modal-id="deleteRunModal" type="button" class="btn btn-white mt-2 sm:mt-0">Cancel</button>
              <%= button_to 'Delete run',
                            @run,
                            method: :delete,
                            data: { turbo: false },
                            class: 'btn btn-destructive w-full whitespace-nowrap'
              %>
            </div>

            <button data-action="click->modal#close" type="button" data-modal-id="deleteRunModal" class="absolute right-0 top-0 p-4 rounded-sm opacity-70 transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-offset-2">
              <%= inline_svg_tag 'icons/x-mark.svg', class: 'size-4' %>
              <span class="sr-only">Close</span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'turbo_run', run: @run %>
</div>
