<%= turbo_stream.replace 'searchResults' do %>
  <%= turbo_frame_tag 'searchResults' do %>
    <% if @results.present? %>
      <div class="space-y-4">
        <% @results.each do |result| %>
          <% if result.is_a?(Team) %>
            <%= render 'teams/shared/team', team: result, show_members: true %>
          <% elsif result.is_a?(User) %>
            <%= render 'users/user', user: result %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center gap-4 my-24 md:my-32">
        <% if @query.present? %>
          <p class="font-semibold">No search results</p>
          <p class="text-soft text-center text-sm text-pretty md:max-w-[70%]">Sorry, we couldn&#8217;t find any results for &#8220;<%= @query %>&#8221;.</p>
        <% else %>
          <p class="text-soft text-center text-sm text-pretty md:max-w-[70%]">Start typing to find teams or other members.</p>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
