<%= turbo_stream.replace 'searchResults' do %>
  <%= turbo_frame_tag 'searchResults' do %>
    <% if @results.present? %>
      <div class="space-y-6">
        <% @results.each do |result| %>
          <% if result.is_a?(Team) %>
            <%= render 'teams/shared/team', team: result, show_members: true %>
          <% elsif result.is_a?(User) %>
            <%= render 'users/user', user: result %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center gap-6 py-12">
        <%= content_tag(:p, @query.present? ? 'No results found.' : 'Start typing to find teams or other members.', class: 'prose dark:prose-invert text-soft text-center') %>
      </div>
    <% end %>
  <% end %>
<% end %>
