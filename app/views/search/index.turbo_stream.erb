<%= turbo_stream.replace 'searchResults' do %>
  <%= turbo_frame_tag 'searchResults' do %>
    <% if @teams.any? || @users.any? %>
      <%= render 'teams/team_list', teams: @teams if @teams.any? %>
      <%= render 'users/user_list', users: @users if @users.any? %>
    <% else %>
      <div class="flex flex-col gap-6 items-center justify-center py-12">
        <%= content_tag(:p, @query.present? ? 'No results found.' : 'Start typing to find teams or other members.', class: 'prose dark:prose-invert text-slate-700 dark:text-slate-400 text-center') %>
      </div>
    <% end %>
  <% end %>
<% end %>
