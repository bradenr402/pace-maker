<div class="pb-6 mt-10 mb-6 border-b border-slate-200 dark:border-slate-700">
  <h1 class="heading">Join Requests</h1>
  <p class="text-soft text-pretty">
    <% num = join_requests.size %>

    <% if num == 0 %>
      There are no pending join requests for this team.
    <% elsif num == 1 %>
      There is 1 pending join request for this team.
    <% else %>
      There are <%= num %> pending join requests for this team.
    <% end %>
  </p>
</div>

<% if join_requests.present? %>
  <div class="space-y-4">
    <% join_requests.each do |request| %>
      <%= render 'teams/show/join_request', request: request %>
    <% end %>
  </div>
<% else %>
  <div class="flex flex-col items-center justify-center gap-4 my-24 md:my-32">
    <p class="font-semibold text-center">No pending join requests</p>
  </div>
<% end %>
