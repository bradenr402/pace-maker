  </div>

  <% chart_partial, xtitle, ytitle = case @chart_type %>
    <% when 'column' %>
      <% ['shared/column_chart', 'Date', '# of long runs'] %>
    <% when 'line' %>
      <% ['shared/line_chart', 'Date', '# of long runs'] %>
    <% when 'bar' %>
      <% ['shared/bar_chart', '# of long runs', 'Date'] %>
  <% end %>

  <%= render chart_partial, data: @long_runs_data, xtitle:, ytitle: %>
</div>
