<div class="mb-24">
  <div class="mt-10 mb-6 space-y-1">
    <h2 class="subheading">Miles <%= date_range_description.titlecase %></h2>
    <p class="text-sm text-soft">This graph shows how many miles <%= @member == current_user ? 'you' : @member.first_name %> ran <%= date_range_description %>.</p>
  </div>

  <% chart_partial, xtitle, ytitle = case @chart_type %>
    <% when 'column' %>
      <% ['shared/column_chart', 'Date', '# of miles'] %>
    <% when 'line' %>
      <% ['shared/line_chart', 'Date', '# of miles'] %>
    <% when 'bar' %>
      <% ['shared/bar_chart', '# of miles', 'Date'] %>
  <% end %>

  <%= render chart_partial, data: @miles_data, precision: 3, xtitle:, ytitle: %>
</div>

<div class="mb-24">
