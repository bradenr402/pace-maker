<!-- Delete Team Modal Backdrop -->
<div
  data-modal-target="backdrop"
  data-modal-id="deleteTeam"
  data-action="mousedown->modal#backdropClose"
  class="modal-backdrop opacity-0 pointer-events-none"></div>

<!-- Delete Team Modal -->
<div
  id="deleteTeam"
  role="dialog"
  aria-label="Delete Team Confirmation"
  tabindex="-1"
  data-modal-target="modal"
  class="modal opacity-0 scale-75 pointer-events-none"
>
  <div class="flex flex-col space-y-1.5 text-center sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Delete Team?</h2>
    <p class="text-soft text-sm">Are you sure you want to delete the team <span class="font-bold"><%= team.name %></span>? All your team&#8217;s data will be permanently deleted. <span class="underline underline-offset-2 font-semibold">This action cannot be undone</span>.</p>
  </div>

  <div class="flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2 mt-4">
    <button data-action="mousedown->modal#close" data-modal-id="deleteTeam" type="button" class="btn btn-dark btn-muted mt-2 sm:mt-0">Keep team</button>
    <%= button_to 'Delete team',
                  team,
                  method: :delete,
                  data: { turbo: false },
                  class: 'btn btn-destructive font-bold w-full whitespace-nowrap'
    %>
  </div>

  <button data-action="mousedown->modal#close" type="button" data-modal-id="deleteTeam" class="modal-x-btn">
    <%= inline_svg_tag 'icons/x-mark.svg', class: 'size-4' %>
    <span class="sr-only">Close</span>
  </button>
</div>
