<div class="flex flex-wrap gap-6 items-center justify-between pb-6 border-b dark:border-slate-700">
  <h1 class="heading"><%= user.default_name %>'s Teams</h1>
  <% if owned_teams.any? %>
    <%= link_to 'New team', new_team_path, class: 'btn btn-primary' %>
  <% end %>
</div>
<% if owned_teams.any? %>
  <%= render 'teams/team_list', teams: owned_teams %>
<% else %>
  <div class="flex flex-col gap-6 items-center justify-center py-12">
    <% if user == current_user %>
      <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400">You don't have any teams yet.</p>
      <%= link_to 'New run', new_run_path, class: 'btn btn-primary' %>
    <% else %>
    <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400"><%= user.default_name %> doesn't have any teams yet.</p>
    <% end %>
  </div>
<% end %>

<div class="flex flex-wrap gap-6 items-center justify-between pb-6 border-b dark:border-slate-700">
  <h1 class="heading"><%= user.default_name %>'s Team Memberships</h1>
</div>
<% if membered_teams.any? %>
  <%= render 'teams/team_list', teams: membered_teams %>
<% else %>
  <div class="flex flex-col gap-6 items-center justify-center py-12">
    <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400">You're not a member of any teams yet.</p>
    <%= link_to 'Find a team', teams_path, class: 'btn btn-white' %>
  </div>
<% end %>
