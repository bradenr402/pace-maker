<div class="mb-24">
  <div class="mt-10 mb-6 pb-6 border-b dark:border-slate-700 space-y-2">
    <h1 class="heading">User Info</h1>
    <p class="text-soft">Information and statistics about <%= user == current_user ? 'you' : 'this user' %>.</p>
  </div>

  <div class="grid gap-6 grid-cols-1 lg:grid-cols-2">
    <!-- Total Miles Card -->
    <div class="bg-slate-50/85 dark:bg-slate-800/85 backdrop-blur-sm rounded-lg shadow-md dark:shadow-none border dark:border-slate-700 p-6">
      <h2 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-6">Total Miles</h2>
      <p class="text-3xl font-bold">
        <%= user.total_miles %>
      </p>
      <p class="text-soft">
        <%= 'mile'.pluralize(user.total_miles) %>
      </p>
    </div>

    <!-- Time Spent Running Card -->
    <div class="bg-slate-50/85 dark:bg-slate-800/85 backdrop-blur-sm rounded-lg shadow-md dark:shadow-none border dark:border-slate-700 p-6">
      <h2 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-6">Time Spent Running</h2>
      <p class="text-3xl font-bold">
        <%= precise_time_ago(user.total_duration, format: :short) %>
      </p>
      <p class="text-soft">
        <%= precise_time_ago(user.total_duration) %>
      </p>
    </div>
  </div>
</div>

<% if user.show_email? || (user.phone_number? && user.show_phone?) %>
  <div class="mb-24">
    <div class="mt-10 mb-6 pb-6 border-b dark:border-slate-700 space-y-2">
      <h1 class="heading">Contact</h1>
      <p class="text-soft"><%= user == current_user ? 'Your contact information' : 'Contact information for this user' %>.</p>
    </div>

    <div class="block sm:flex space-y-10 sm:space-y-0 sm:items-center sm:justify-around mb-8">
      <% if user.show_email? %>
        <div class="space-y-2 text-center">
          <p><%= user.email %></p>
          <div class="flex items-center justify-center gap-3">
            <%= mail_to user.email, class: 'btn btn-sm btn-white flex items-center gap-2' do %>
              <%= inline_svg_tag 'icons/envelope.svg', class: 'size-4' %>
              <span>Email</span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if user.show_phone? && user.phone_number? %>
        <div class="space-y-2 text-center">
          <p><%= number_to_phone(user.phone_number, area_code: true) %></p>
          <div class="flex items-center justify-center gap-3">
            <%= sms_to user.phone_number, class: 'btn btn-sm btn-white flex items-center gap-2' do %>
              <%= inline_svg_tag 'icons/message-bubble.svg', class: 'size-4' %>
              <span>Message</span>
            <% end %>

            <%= phone_to user.phone_number, class: 'btn btn-sm btn-white flex items-center gap-2' do %>
              <%= inline_svg_tag 'icons/phone.svg', class: 'size-4' %>
              <span>Call</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
