<div class="pb-6 mt-10 mb-6 border-b dark:border-slate-700">
  <h1 class="heading">Help Center</h1>
  <p class="text-soft">Looking for assistance? You&#8217;ve come to the right place.</p>
</div>

<div class="pb-6">
  <h2 class="subheading">App Installation Instructions</h2>
  <p class="text-sm text-soft">Follow the instructions below to install PaceMaker on your device for quicker access.</p>
</div>

<div class="mb-24" data-controller="pwa">
  <div data-pwa-target="installedMessage" class="hidden mb-6">
    <p class="text-sm text-light">PaceMaker is already installed on your device.</p>
  </div>

  <div data-pwa-target="instructionsContainer">
    <div class="mb-6">
      <%= label_tag :browser_select, 'Select your browser to see installation instructions:', class: 'form-label' %>
      <%= select_tag :browser_select, options_for_select([
        ['Google Chrome (Desktop)', 'chrome'],
        ['Microsoft Edge', 'edge'],
        ['Firefox', 'firefox'],
        ['Safari (iOS & iPadOS)', 'iosSafari'],
        ['Safari (macOS)', 'macosSafari']
      ]), { id: 'browser-select', data: { action: 'change->pwa#manualSelect', pwa_target: 'browserSelect' }, class: 'form-select' } %>
    </div>

    <!-- Chrome -->
    <div data-pwa-target="chromeInstructions" class="hidden mb-10">
      <h2 class="font-semibold">Google Chrome (Desktop)</h2>
      <ul class="mt-1.5 list-disc ml-4 text-sm">
        <li>Open the browser menu (three dots in the top-right).</li>
        <li>Select <strong>&#8220;Install App&#8221;</strong> or click the install icon in the address bar.</li>
        <li>Click <strong>install</strong> to confirm.</li>
      </ul>
    </div>

    <!-- Edge -->
    <div data-pwa-target="edgeInstructions" class="hidden mb-10">
      <h2 class="font-semibold">Microsoft Edge</h2>
      <ul class="mt-1.5 list-disc ml-4 text-sm">
        <li>Click the <strong>&#8220;Install App&#8221;</strong> icon in the address bar.</li>
        <li>Click <strong>install</strong> to confirm.</li>
      </ul>
    </div>

    <!-- Firefox -->
    <div data-pwa-target="firefoxInstructions" class="hidden mb-10">
      <h2 class="font-semibold">Firefox</h2>
      <p class="text-sm text-soft">Firefox does not support PWA installation at this time.</p>
    </div>

    <!-- iOS Safari -->
    <div data-pwa-target="iosSafariInstructions" class="hidden mb-10">
      <h2 class="font-semibold">Safari (iOS &amp; iPadOS)</h2>
      <ul class="mt-1.5 list-disc ml-4 text-sm">
        <li>Tap the <strong>Share</strong> button (square with arrow pointing up).</li>
        <li>Select <strong>&#8220;Add to Home Screen&#8221;</strong>.</li>
        <li>Tap <strong>Add</strong> to confirm.</li>
      </ul>
    </div>

    <!-- macOS Safari -->
    <div data-pwa-target="macosSafariInstructions" class="hidden mb-10">
      <h2 class="font-semibold">Safari (macOS)</h2>
      <ul class="mt-1.5 list-disc ml-4 text-sm">
        <li>Click the <strong>Share</strong> button in the toolbar (square with arrow pointing up).</li>
        <li>Select <strong>&#8220;Add to Dock&#8221;</strong>.</li>
        <li>Click <strong>Add</strong> to confirm.</li>
      </ul>
    </div>

    <!-- Fallback -->
    <div data-pwa-target="unknownInstructions" class="hidden mb-10">
      <p class="text-sm text-soft">Your browser does not support PWA installation. Supported browsers include:</p>
      <ul class="mt-1.5 list-disc ml-4 text-sm">
        <li>Google Chrome (desktop)</li>
        <li>Microsoft Edge (desktop)</li>
        <li>Safari (iOS, iPadOS, and macOS)</li>
      </ul>
    </div>
  </div>
</div>
