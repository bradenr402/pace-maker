<div class="pb-6 mt-10 mb-6 border-b border-slate-200 dark:border-slate-700">
  <h1 class="heading">Runs Today</h1>
  <p class="text-soft">Runs <%= user == current_user ? 'you have' : "#{user.first_name} has" %> logged today.</p>
</div>
<% runs_today = user.runs_today %>

<% if runs_today.present? %>
  <p class="mt-6 mb-2 text-sm text-light"><%= user == current_user ? 'You have' : "#{user.first_name} has" %> logged <%= pluralize(runs_today.count, 'run') %> today.</p>
<% end %>

<div class="mb-10 space-y-4 sm:space-y-6">
  <% if runs_today.present? %>
    <% runs_today.each do |run| %>
      <%= render run %>
    <% end %>
  <% else %>
    <div class="flex flex-col items-center justify-center gap-4 my-24 md:my-32">
      <p class="font-semibold">No runs today</p>

      <p class="text-soft text-center text-sm text-pretty md:max-w-[70%]">
        <% if user == current_user %>
          You haven&#8217;t logged any runs yet today.
        <% else %>
          <%= user.default_name %> hasn&#8217;t logged any runs yet today.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
