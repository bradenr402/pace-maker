<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="pb-6 border-b dark:border-slate-700 text-center">

    <%= image_tag @user.avatar, class: 'size-28 sm:size-32 md:size-36 rounded-lg drop-shadow-lg dark:drop-shadow-none mx-auto mb-4' if @user.avatar.attached? %>

    <h1 class="heading"><%= @user.display_name.present? ? @user.display_name : @user.username %></h1>
    <% if @user.display_name.present? %>
      <h2 class="text-lg my-1 text-slate-700 dark:text-slate-400"><%= @user.username %></h2>
    <% elsif @user == current_user %>
      <p class="mt-1">
        <%= link_to 'Add a display name to your profile', edit_user_registration_path, class: 'text-sm text-slate-700 dark:text-slate-400 hover:text-indigo-600 dark:hover:text-indigo-500 transition ease-in-out duration-300' %>
      </p>
    <% end %>

    <% if @user.settings(:privacy).email_visible || (@user.settings(:privacy).phone_visible && @user.phone_number.present?) %>
      <div class="block sm:flex space-y-4 sm:items-center sm:justify-around mb-8">
        <% if @user.settings(:privacy).email_visible %>
          <div class="space-y-1">
            <p class="text-sm text-slate-700 dark:text-slate-400 mb-1"><%= @user.email %></p>
            <div class="flex items-center justify-center gap-3">
              <%= mail_to @user.email, class: 'btn btn-sm btn-white' do %>
                <%= inline_svg_tag 'icons/envelope.svg', class: 'size-4' %>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @user.settings(:privacy).phone_visible && @user.phone_number.present? %>
          <div class="space-y-1">
            <p class="text-sm text-slate-700 dark:text-slate-400 mb-1"><%= number_to_phone(@user.phone_number, area_code: true) %></p>
            <div class="flex items-center justify-center gap-3">
              <%= sms_to @user.phone_number, class: 'btn btn-sm btn-white' do %>
                <%= inline_svg_tag 'icons/message-bubble.svg', class: 'size-4' %>
              <% end %>

              <%= phone_to @user.phone_number, class: 'btn btn-sm btn-white' do %>
                <%= inline_svg_tag 'icons/phone.svg', class: 'size-4' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mb-24">
    <%= render 'user_stats', user: @user %>
  </div>

  <div class="mb-24">
    <div class="flex flex-wrap gap-6 items-center justify-between mt-10 pb-6 border-b dark:border-slate-700">
      <h1 class="heading">Runs Today</h1>
      <% if @user == current_user && @user.runs_today.any? %>
        <div class="flex items-center justify-end">
          <%= link_to "New run", new_run_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="divide-y dark:divide-slate-700 dark:text-slate-700 mb-10">
      <% if @user.runs_today.any? %>
        <% @user.runs_today.each do |run| %>
          <div class="py-3">
            <%= render run %>
            <%= link_to "View run", run, class: "btn-link inline-block my-3" %>
          </div>
        <% end %>
      <% else %>
        <div class="flex flex-col gap-6 items-center justify-center py-12">
          <% if @user == current_user %>
            <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400">You haven't gone on any runs yet today.</p>
            <%= link_to 'New run', new_run_path, class: 'btn btn-primary' %>
          <% else %>
            <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400"><%= @user.display_name.present? ? @user.display_name : @user.username %> hasn't gone on any runs yet today.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-24">
    <div class="flex flex-wrap gap-6 items-center justify-between mt-10 mb-4 pb-6 border-b border-slate-200 dark:border-slate-700">
      <h1 id="runs_title" class="heading">Filter Runs By Date</h1>
    </div>

    <%= form_with url: user_path(@user), method: :get, local: true, html: { novalidate: true }, data: { turbo_frame: 'runs', controller: 'custom-date-range form-validation' } do %>
      <div class="form-group">
        <%= label_tag :run_date_range, 'Select date range', class: 'form-label' %>
        <%= select_tag :run_date_range, options_for_select(['This week', 'Last week', 'This month', 'Last month', 'Custom range'], params[:run_date_range]), data: { custom_date_range_target: 'select', action: 'custom-date-range#update' }, class: 'form-select' %>
      </div>

      <div class="form-group hidden" data-custom-date-range-target="startDate">
        <%= label_tag :run_start_date, 'Start date', class: 'form-label' %>
        <%= date_field_tag :run_start_date, nil, max: Date.yesterday, class: 'form-input', data: { form_validation_target: "runStartDate", action: "input->form-validation#validateRunEndDate" } %>
      </div>

      <div class="form-group hidden" data-custom-date-range-target="endDate">
        <%= label_tag :run_end_date, 'End date', class: 'form-label' %>
        <%= date_field_tag :run_end_date, nil, max: Date.today, class: 'form-input', data: { form_validation_target: "runEndDate", action: "input->form-validation#validateRunEndDate" } %>
        <span class="error-message hidden my-1" data-form-validation-target="runEndDateError">End date must be today or earlier and must be after start date</span>
      </div>

      <%= submit_tag 'Apply', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div class="mb-24">
    <%= turbo_frame_tag 'runs' do %>
      <div class="flex flex-wrap gap-6 items-center justify-between mt-10 pb-6 border-b dark:border-slate-700">
        <h1 class="heading"><%= @title %></h1>
      </div>
      <div class="divide-y dark:divide-slate-700 dark:text-slate-700 mb-10">
        <% if @runs.any? %>
          <% @runs.each do |run| %>
            <div class="py-3">
              <%= render run %>
              <div class="flex items-center gap-2">
                <%= link_to 'View run', run, class: 'btn btn-white btn-sm' if run.comments? %>
                <%= link_to 'Edit run', edit_run_path(run), class: 'btn btn-primary btn-sm' if @user == current_user %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="flex flex-col gap-6 items-center justify-center py-12">
            <p class="prose dark:prose-invert text-slate-700 dark:text-slate-400">No runs found for the selected date range.</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('turbo:frame-load', function(event) {
    const titleElement = document.getElementById('runs_title');
    if (titleElement) {
      titleElement.scrollIntoView({ behavior: 'smooth' });
    }
  });
</script>
